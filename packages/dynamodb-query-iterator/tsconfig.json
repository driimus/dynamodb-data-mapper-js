{
  "compilerOptions": {
    "target": "ES2020",
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "outDir": "./build",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["src/*.spec.ts", "src/*.integ.ts"]
}
