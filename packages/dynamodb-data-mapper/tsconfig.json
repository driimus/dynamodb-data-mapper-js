{
    "compilerOptions": {
        "target": "ES2020",
        "downlevelIteration": true,
        "importHelpers": true,
        "module": "commonjs",
        "noUnusedLocals": true,
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./build"
    },
    "typedocOptions": {
        "mode": "file",
        "out": "../../docs/packages/dynamodb-data-mapper",
        "excludeNotExported": true,
        "excludePrivate": true,
        "hideGenerator": true
    }
}
